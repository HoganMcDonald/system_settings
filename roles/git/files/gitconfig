[core]
	editor = nvim
	excludesfile = ~/.gitignore
[color]
	ui = auto
[alias]
  aa = add --all
  branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
  ci = commit -v
  co = checkout
  lg = log --graph --color --pretty=format:'%Cred%h%Creset %C(bold blue)<%an>%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)' --abbrev-commit --date=relative
  lo = log --graph --color --pretty=format:'%Cred%h%Creset %C(bold blue)<%an>%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)' --abbrev-commit --date=relative --first-parent --
  pf = push --force-with-lease
  p = push -u
  st = status
  cp = "!sh ~/.bin/git-copy-branch.sh"
  cleanup = "!sh ~/.bin/git-delete-branches.sh"
  stats = "!sh ~/.bin/git-branch-stats.sh"
  merged = "!bash ~/.bin/git-merged.sh"
  append = town append
  br = town switch
	down = town down
	hack = town hack
	delete = town delete
	prepend = town prepend
	propose = town propose
	rename = town rename
	repo = town repo
	sync = town sync
	up = town up
	compress = town compress
	contribute = town contribute
	diff-parent = town diff-parent
	observe = town observe
	park = town park
	set-parent = town set-parent
	ship = town ship
[fetch]
  prune = true
[pull]
  rebase = true
[filter "lfs"]
  process = git-lfs filter-process
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true    # use n and N to move between diff sections
    light = false      # set to true if you're in a terminal with a light background color (e.g. the default macOS terminal)
    side-by-side = true
    line-numbers = true

[merge]
    conflictstyle = diff3
[diff]
  colorMoved = zebra
[push]
	default = current
[init]
	defaultBranch = main
