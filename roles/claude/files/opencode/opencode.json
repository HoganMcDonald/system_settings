{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "build": {
      "description": "Full development agent for building features and making changes",
      "mode": "primary",
      "model": "anthropic/claude-sonnet-4-20250514",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "patch": true,
        "todowrite": true,
        "todoread": true,
        "webfetch": true
      }
    },
    "plan": {
      "description": "Planning and analysis agent that reviews code without making changes",
      "mode": "primary",
      "model": "anthropic/claude-opus-4-20250514",
      "temperature": 0.1,
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "patch": false,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "todowrite": true,
        "todoread": true,
        "webfetch": true
      },
      "permission": {
        "edit": "deny",
        "bash": "deny"
      }
    }
  }
}